{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "strict": false,
      "removeComments": false,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "ES2023",
      "sourceMap": false,
      "outDir": "./dist",
      "rootDir": "./src",
      "skipLibCheck": true,
      "baseUrl": "./",
      "paths": {
        "@domain/*": [
          "src/domain/*"
        ],
        "@infrastructure/*": [
          "src/infrastructure/*"
        ],
        "@modules/*": [
          "src/modules/*"
        ]
      }
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "tests",
    ]
  }